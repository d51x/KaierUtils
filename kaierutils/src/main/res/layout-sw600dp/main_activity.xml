<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"

	android:id="@+id/relativeLayout2"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	tools:context=".Settings.SettingsActivity">

	<!-- layout_radio_music_info -->
	<LinearLayout
		android:id="@+id/layout_radio_music_info"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:id="@+id/layout_radio_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:orientation="vertical"
			android:visibility="gone">

			<ImageView
				android:id="@+id/ivRadioInfo"
				android:layout_width="64dp"
				android:layout_height="64dp"
				android:layout_gravity="center_horizontal"
				android:contentDescription="@string/radio_info"
				android:src="@drawable/toast_radio" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:paddingTop="10dp"
				android:visibility="visible">

				<TextView
					android:id="@+id/tvRadioInfo1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:gravity="center_horizontal"
					android:text="Medium Text"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textSize="32sp" />

				<TextView
					android:id="@+id/tvRadioInfo2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:gravity="center_horizontal"
					android:text="Medium Text"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textColor="@android:color/holo_blue_dark" />
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/layout_music_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:focusableInTouchMode="false"
			android:orientation="vertical"
			android:visibility="visible">

			<ImageView
				android:id="@+id/ivAlbumArt"
				android:layout_width="144dp"
				android:layout_height="144dp"
				android:layout_gravity="center_horizontal"
				android:contentDescription="@string/album_art"
				android:src="@drawable/toast_music" />


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:orientation="vertical"
				android:paddingTop="10dp"
				android:visibility="visible">

				<TextView
					android:id="@+id/tvMusicInfo1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:ellipsize="marquee"
					android:gravity="center"
					android:text="Medium Text"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textSize="26sp" />

				<TextView
					android:id="@+id/tvMusicInfo2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:gravity="center"
					android:text="Medium Text"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textColor="@android:color/holo_blue_dark" />

			</LinearLayout>

		</LinearLayout>


	</LinearLayout>

	<!-- volume -->
	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="160dp"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:id="@+id/layout_volume_level"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/ivVolumeLevel"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginStart="26dp"
				android:contentDescription="@string/vol_mute"
				android:src="@drawable/volume_mute" />

			<TextView
				android:id="@+id/tvCurrentVolume"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:paddingStart="10dp"
				android:text="@string/_0"
				android:textIsSelectable="false"
				android:textSize="40sp"
				android:textStyle="bold"
				tools:ignore="RtlSymmetry" />
		</LinearLayout>

	</LinearLayout>

	<!-- layoutCanMMC -->
	<LinearLayout
		android:id="@+id/layoutCanMMC"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/layout_bg"
		android:baselineAligned="false"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingStart="8dp"
		android:paddingTop="8dp"
		android:paddingEnd="8dp"
		android:paddingBottom="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		tools:layout_editor_absoluteX="16dp">

		<include layout="@layout/dash_panel" />

		<ImageButton
			android:id="@+id/ibFloatingPanel"
			android:layout_width="36dp"
			android:layout_height="wrap_content"
			android:layout_gravity="start"
			android:layout_weight="0"
			app:srcCompat="@android:drawable/ic_menu_set_as" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="right"
			android:orientation="horizontal"
			tools:ignore="RtlHardcoded">


			<ImageView
				android:id="@+id/ivOBD2Status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:clickable="true"
				android:contentDescription="@string/obd2_status"
				android:paddingLeft="10dp"
				android:paddingTop="4dp"
				android:paddingRight="10dp"
				android:paddingBottom="4dp"
				android:src="@drawable/obd_disconnected" />
		</LinearLayout>

	</LinearLayout>

	<!-- layout_MMC_climate -->
	<RelativeLayout
		android:id="@+id/layout_MMC_climate"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="visible"
		android:gravity="center"
		app:layout_constraintBottom_toTopOf="@+id/layoutCanMMC"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/layout_general_info">



	</RelativeLayout>

	<!-- layout_general_info -->
	<LinearLayout
		android:id="@+id/layout_general_info"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<include layout="@layout/layout_speed_panel" />

		<LinearLayout
			android:id="@+id/layout_waypoints"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:longClickable="true"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/ivGPSDistance"
				android:layout_width="48dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginStart="26dp"
				android:contentDescription="@string/gps_distance"
				android:padding="6dp"
				android:src="@drawable/route_length" />

			<TextView
				android:id="@+id/tvGPSDistance"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:longClickable="false"
				android:paddingStart="10dp"
				android:text="@string/text_gps_distance"
				android:textSize="40sp"
				tools:ignore="RtlSymmetry" />

			<TextView
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="bottom|center_horizontal"
				android:paddingStart="4dp"
				android:text="@string/km"
				android:textSize="20sp"
				tools:ignore="RtlSymmetry" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/layout_tracktime"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clickable="true"
			android:longClickable="true"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/ivTrackTime"
				android:layout_width="48dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginStart="26dp"
				android:contentDescription="@string/track_time"
				android:padding="6dp"
				android:src="@drawable/track_time_0"
				tools:ignore="ContentDescription" />

			<TextView
				android:id="@+id/tvTrackTime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingStart="10dp"
				android:text="@string/empty_str_2_dashes"
				android:textSize="40sp"
				tools:ignore="RtlSymmetry" />

			<TextView
				android:id="@+id/tvTrackTimeHourOrMin"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="bottom|center_horizontal"
				android:paddingStart="4dp"
				android:text="@string/text_gps_track_time_format_min"
				android:textSize="20sp"
				tools:ignore="RtlSymmetry" />

			<TextView
				android:id="@+id/tvTrackTime2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingStart="10dp"
				android:text="@string/str_dashes"
				android:textSize="40sp"
				tools:ignore="RtlSymmetry" />

			<TextView
				android:id="@+id/tvTrackTimeMinOrSec"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="bottom|center_horizontal"
				android:paddingStart="4dp"
				android:text="@string/text_gps_track_time_format_sec"
				android:textSize="20sp"
				tools:ignore="RtlSymmetry" />

		</LinearLayout>

	</LinearLayout>

	<ImageView
		android:id="@+id/iv_bg_seat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="right"
		android:adjustViewBounds="false"
		android:baselineAlignBottom="false"
		android:contentDescription="@string/bg_seat"
		android:src="@drawable/air_wind_seat_my"
		app:layout_constraintBottom_toTopOf="@+id/layoutCanMMC"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="RtlHardcoded" />

	<ImageView
		android:id="@+id/iv_air_direction"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal|end"
		android:contentDescription="@string/air_direction"
		android:src="@drawable/air_wind_seat_my_to_face_and_feet"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/iv_bg_seat" />

	<ImageView
		android:id="@+id/iv_air_fan_speed"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/air_fan_speed"
		android:src="@drawable/air_wind_seat_my_fan_8"
		app:layout_constraintEnd_toEndOf="@+id/iv_bg_seat"
		app:layout_constraintHorizontal_bias="0.533"
		app:layout_constraintStart_toStartOf="@+id/iv_bg_seat"
		app:layout_constraintTop_toBottomOf="@+id/iv_bg_seat" />

	<ImageView
		android:id="@+id/iv_air_temp"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_gravity="end"
		android:adjustViewBounds="false"
		android:baselineAlignBottom="false"
		android:contentDescription="@string/air_temp"
		android:src="@drawable/ac_temp_green"
		app:layout_constraintBottom_toBottomOf="@+id/tv_air_cond_temp"
		app:layout_constraintEnd_toStartOf="@+id/tv_air_cond_temp"
		app:layout_constraintTop_toTopOf="@+id/tv_air_cond_temp" />

	<TextView
		android:id="@+id/tv_air_cond_temp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:layout_marginEnd="24dp"
		android:gravity="center_vertical|end"
		android:text="@string/empty_temp"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textSize="42sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@+id/iv_bg_seat"
		app:layout_constraintEnd_toStartOf="@+id/iv_bg_seat"
		app:layout_constraintTop_toTopOf="@+id/iv_bg_seat" />

	<ImageView
		android:id="@+id/iv_ac_blow_auto"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="4dp"
		android:layout_marginTop="24dp"
		android:contentDescription="@string/ac_blow_auto"
		android:src="@drawable/ac_mode_auto"
		app:layout_constraintStart_toStartOf="@+id/iv_bg_seat"
		app:layout_constraintTop_toBottomOf="@+id/iv_air_ac_state" />

	<ImageView
		android:id="@+id/iv_ac_fan_mode"
		android:layout_width="40dp"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:contentDescription="@string/ac_fan_mode"
		android:src="@drawable/ac_mode_auto"
		app:layout_constraintBottom_toBottomOf="@+id/iv_air_fan_speed"
		app:layout_constraintEnd_toStartOf="@+id/iv_air_fan_speed"
		app:layout_constraintStart_toStartOf="@+id/iv_bg_seat"
		app:layout_constraintTop_toBottomOf="@+id/iv_bg_seat" />

	<ImageView
		android:id="@+id/iv_air_defogger"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_weight="0.3"
		android:contentDescription="@string/air_defogger"
		android:src="@drawable/air_rear"
		android:visibility="visible"
		app:layout_constraintBottom_toTopOf="@+id/iv_bg_seat"
		app:layout_constraintStart_toStartOf="@+id/iv_bg_seat" />

	<ImageView
		android:id="@+id/iv_air_recirculation"
		android:layout_width="wrap_content"
		android:layout_height="16dp"
		android:layout_gravity="center_horizontal"
		android:layout_weight="0.3"
		android:contentDescription="@string/air_recirculation"
		android:src="@drawable/air_inner_loop"
		android:visibility="visible"
		app:layout_constraintBottom_toBottomOf="@+id/iv_air_defogger"
		app:layout_constraintStart_toEndOf="@+id/iv_air_defogger"
		app:layout_constraintTop_toTopOf="@+id/iv_air_defogger" />

	<ImageView
		android:id="@+id/iv_air_ac_state"
		android:layout_width="wrap_content"
		android:layout_height="16dp"
		android:layout_gravity="center_horizontal"
		android:layout_weight="0.4"
		android:contentDescription="@string/air_ac_state"
		android:src="@drawable/air_cond__state_off"
		app:layout_constraintBottom_toBottomOf="@+id/iv_air_recirculation"
		app:layout_constraintStart_toEndOf="@+id/iv_air_recirculation"
		app:layout_constraintTop_toTopOf="@+id/iv_air_recirculation" />

</android.support.constraint.ConstraintLayout>
