<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="ru.d51x.kaierutils.Settings.SettingsOBDFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Switch
                style="0.4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_obd_use"
                android:id="@+id/swUseOBD2"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:layout_gravity="start|top"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/odbii_select_device"
                android:id="@+id/btnSelectDevice2"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_horizontal|top"
                android:textSize="12sp"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/odbii_device_name"
                android:id="@+id/tvOBDDevice"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/odbii_device_status"
                android:id="@+id/tvDeviceState"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:layout_weight="0.4"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnOBDConnect"
                android:id="@+id/btnOBDConnect2"
                android:textSize="12sp"
                android:layout_gravity="end"
                android:visibility="invisible"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnOBDDisconnect"
                android:id="@+id/btnOBDDisconnect2"
                android:textSize="12sp"
                android:layout_gravity="end"
                android:visibility="invisible"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="32dp"
            android:layout_marginStart="32dp"
            android:id="@+id/scrollView3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/cbNewObdProcess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginEnd="8dp"
                    android:text="@string/cbOBD_new_process"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/text_fuel_tank_capacity"
                        android:id="@+id/tvFuelTankCapacity"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:enabled="true"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/etSettingsFuelTankCapacity"
                        android:width="60dp"
                        android:textSize="18sp"
                        android:text="60"
                        android:enabled="true"/>
                </LinearLayout>

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbOBD_show_fuel_consump_detail"
                    android:layout_marginEnd="8dp"
                    android:textSize="18sp"
                    android:text="@string/cbOBD_show_fuel_consump_detail"
                    android:checked="true"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cbCanMMC_show_fuel"
                        android:layout_weight="1"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_update_time_min"
                        android:id="@+id/textView14"
                        android:textSize="18sp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edtCanMMC_fueltank_update_time"
                        android:width="60dp"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cbCanMMC_show_CVT_temp"
                        android:layout_weight="1"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_update_time_min"
                        android:id="@+id/textView11"
                        android:textSize="18sp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edtCVT_temp_update_time"
                        android:width="60dp"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_marginEnd="8dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cbCanMMC_cvt_oil_degradation"
                        android:layout_weight="1"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_update_time_min"
                        android:id="@+id/textView15"
                        android:textSize="18sp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edtCanMMC_oil_degr_update_time"
                        android:width="60dp"
                        android:textSize="16sp"/>
                </LinearLayout>
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbCanMMC_show_climate_data"
                        android:layout_marginEnd="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="@string/cbCanMMC_show_climate_data"
                        android:checked="true"
                        android:textSize="18sp"/>
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbCanMMC_show_parking_data"
                        android:text="@string/cbCanMMC_show_parking_data"
                        android:layout_marginEnd="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:checked="true"
                        android:textSize="18sp"/>

                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbUseSpeedFromMeter"
                        android:text="@string/cbUseSpeedFromMeter"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:checked="true"
                        android:textSize="18sp"/>
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbUseSpeedFromEngine"
                        android:text="@string/cbUseSpeedFromEngine"
                        android:layout_marginEnd="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:checked="true"
                        android:textSize="18sp"/>
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbUseSpeedFromAC"
                        android:text="@string/cbUseSpeedFromAC"
                        android:layout_marginEnd="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:checked="true"
                        android:textSize="18sp"/>

                    <Switch
                        android:id="@+id/cbUseSpeedFromCVT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:layout_marginEnd="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="@string/cbUseSpeedFromCVT"
                        android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
