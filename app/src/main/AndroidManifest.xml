<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.d51x.kaierutils" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".TWUtilService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <receiver
            android:name=".TWUtilBroadcastReceiver"
            android:enabled="true"
            android:exported="true" >
	        <intent-filter>
		        <action android:name="android.intent.action.BOOT_COMPLETED" />
		        <action android:name="android.intent.action.ACTION_SHUTDOWN" />
		        <action android:name="com.tw.service.action.WAKEUP" />
		        <action android:name="com.tw.service.action.SLEEP" />
		        <action android:name="com.tw.service.action.REQUEST_SHUTDOWN" />
		        <action android:name="com.tw.service.action.REVERSE_ACTIVITY_START" />
		        <action android:name="com.tw.service.action.REVERSE_ACTIVITY_FINISH" />
		        <action android:name="com.tw.service.action.REVERSE_TAG_START" />
		        <action android:name="com.tw.service.action.REVERSE_TAG_STOP" />
	        </intent-filter>
        </receiver>
    </application>

	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.SHUTDOWN" />

</manifest>
