<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ru.d51x.kaierutils.OBDIIActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_obd_use"
                android:id="@+id/swUseOBD"
                android:layout_gravity="center_vertical"
                style="0.4"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/odbii_select_device"
                android:id="@+id/btnSelectDevice"
                android:layout_marginLeft="16dp"
                android:layout_gravity="right"
                android:layout_weight="0.2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnOBDConnect"
                android:id="@+id/btnOBDConnect"
                android:layout_gravity="right"
                android:layout_weight="0.2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnOBDDisconnect"
                android:id="@+id/btnOBDDisconnect"
                android:layout_gravity="right"
                android:layout_weight="0.2"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cbCanMMC"
                android:id="@+id/cbCanMMC"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/odbii_device_name"
                android:id="@+id/tvDeviceName"
                android:textSize="20sp"
                android:layout_gravity="left"/>

            <TextView
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:text="@string/odbii_device_status"
                android:id="@+id/tvDeviceStatus"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:gravity="right"
                android:layout_weight="0.4"
                android:layout_gravity="right"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Текущие параметры:"
                        android:id="@+id/textView6"
                        android:autoText="false"
                        android:textSize="24sp"
                        android:layout_weight="0.5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_cmu_voltage"
                        android:id="@+id/tvOBD_CMUVoltage"
                        android:textSize="20sp"
                        android:layout_gravity="bottom|right"
                        android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_speed"
                        android:id="@+id/tvOBD_Speed"
                        android:textSize="20sp"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_engine_rpm"
                        android:id="@+id/tvOBDEngineRPM"
                        android:textSize="20sp"
                        android:layout_gravity="right"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_coolant_temp"
                        android:id="@+id/tvOBD_CoolantTemp"
                        android:textSize="20sp"
                        android:layout_weight="0.5"
                        android:layout_gravity="left"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AirIntakeTemp"
                        android:id="@+id/tvOBD_AirIntakeTemp"
                        android:textSize="20sp"
                        android:layout_weight="0.4"
                        android:layout_gravity="right"
                        android:gravity="right"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAF"
                        android:id="@+id/tvOBD_MAF"
                        android:textSize="20sp"
                        android:layout_weight="0.6"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/layoutCanMMC">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_can_211D_A3"
                        android:id="@+id/tv_can_211D_A3"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_can_211D_A2"
                        android:id="@+id/tv_can_211D_A2"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_can_211D_A4"
                        android:id="@+id/tv_can_211D_A4"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_can_211D_D0"
                        android:id="@+id/tv_can_211D_D0"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_can_211E_A0"
                        android:id="@+id/tv_can_211E_A0"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_can_211E_A3"
                        android:id="@+id/tv_can_211E_A3"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_can_211E_A5"
                        android:id="@+id/tv_can_211E_A5"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_can_2110_cvt_oil_degr"
                        android:id="@+id/tv_can_2110_cvt_oil_degr"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_can_2103_cvt_temp_count"
                        android:id="@+id/tv_can_2103_cvt_temp_count"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_can_2103_cvt_temp_1"
                        android:id="@+id/tv_can_2103_cvt_temp_1"
                        android:textSize="16sp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Текущая поездка:"
                    android:id="@+id/textView7"
                    android:autoText="false"
                    android:textSize="24sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_obd_distanse"
                    android:id="@+id/tvGPS_Distanse"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_fuel_consumption_mpg"
                        android:id="@+id/tvOBD_FuelConsumption_mpg"
                        android:textSize="20sp"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_fuel_consumption_lph"
                        android:id="@+id/tvOBD_FuelConsumption_lph"
                        android:textSize="20sp"
                        android:layout_gravity="left"
                        android:layout_weight="0.5"
                        android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_fuel_consumption_avg"
                        android:id="@+id/tvOBD_FuelConsumption_avg"
                        android:textSize="20sp"
                        android:layout_weight="0.5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_fuel_consumption_avg2"
                        android:id="@+id/tvOBD_FuelConsumption_avg2"
                        android:textSize="20sp"
                        android:layout_weight="0.5"
                        android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_fuel_usage"
                        android:id="@+id/tvOBD_FuelUsage"
                        android:textSize="20sp"
                        android:layout_weight="0.5"
                        android:layout_gravity="right"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_fuel_usage_with_stops"
                        android:id="@+id/tvOBD_FuelUsage2"
                        android:textSize="20sp"
                        android:layout_weight="0.5"
                        android:gravity="right"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="За все время:"
                    android:id="@+id/textView8"
                    android:autoText="false"
                    android:textSize="24sp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_fuel_consumption_avg"
                        android:id="@+id/tvOBD_FuelConsumption_total"
                        android:textSize="20sp"
                        android:layout_weight="0.5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_fuel_consumption_avg2"
                        android:id="@+id/tvOBD_FuelConsumption_total2"
                        android:textSize="20sp"
                        android:layout_weight="0.5"
                        android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_fuel_usage"
                        android:id="@+id/tvOBD_FuelUsageTotal"
                        android:textSize="20sp"
                        android:layout_weight="0.5"
                        android:layout_gravity="right"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_obd_fuel_usage_with_stops"
                        android:id="@+id/tvOBD_FuelUsageTotal2"
                        android:textSize="20sp"
                        android:layout_weight="0.5"
                        android:gravity="right"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
