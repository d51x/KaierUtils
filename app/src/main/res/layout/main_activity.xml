<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".SettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_general_info"
        android:layout_alignParentLeft="true"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/layout_gps_speed">

	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:id="@+id/ivSpeedChange"
	            android:paddingLeft="20dp"/>
	        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/ivSpeed"
                android:src="@drawable/speedo_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_gps_speed_value"
                android:id="@+id/text_gps_speed_value"
                android:textSize="40sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                />

	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="км/ч"
		        android:id="@+id/textView2" android:gravity="bottom|center_horizontal"
		        android:textSize="30sp" android:paddingLeft="4dp"/>
	        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ivSpeedChange2"
                android:paddingLeft="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/layout_other_speed">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_average_speed"
                android:id="@+id/tvAverageSpeed"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_max_speed"
                android:id="@+id/tvMaxSpeed"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:id="@+id/layout_waypoints"
android:longClickable="true">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:id="@+id/ivGPSDistance" android:src="@drawable/route_length"
                android:layout_marginLeft="26dp"
                android:padding="6dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvGPSDistance" android:text="@string/text_gps_distance"
                android:textSize="40sp" android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:longClickable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="км"
                android:id="@+id/textView3"
                android:gravity="bottom|center_horizontal"
                android:textSize="20sp"
                android:paddingLeft="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_tracktime"
            android:longClickable="true"
            android:clickable="true">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:id="@+id/ivTrackTime"
                android:layout_marginLeft="26dp"
                android:src="@drawable/track_time_0"
                android:padding="6dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:id="@+id/tvTrackTime"
                android:layout_above="@+id/layout_test"
                android:layout_toLeftOf="@+id/layout_obd2"
                android:paddingLeft="10dp"
                android:textSize="40sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_gps_track_time_format_min"
                android:id="@+id/tvTrackTimeHourOrMin"
                android:gravity="bottom|center_horizontal"
                android:textSize="20sp"
                android:paddingLeft="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:id="@+id/tvTrackTime2"
                android:layout_above="@+id/layout_test"
                android:layout_toLeftOf="@+id/layout_obd2"
                android:paddingLeft="10dp"
                android:textSize="40sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_gps_track_time_format_sec"
                android:id="@+id/tvTrackTimeMinOrSec"
                android:gravity="bottom|center_horizontal"
                android:textSize="20sp"
                android:paddingLeft="4dp"/>
        </LinearLayout>

    </LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="160dp"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:layout_centerHorizontal="true">
		<LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/layout_volume_level"
			>

	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:id="@+id/ivVolumeLevel"
	            android:src="@drawable/volume_mute"
	            android:layout_marginLeft="26dp"/>

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:id="@+id/tvCurrentVolum"
	            android:textSize="40sp"
	            android:textIsSelectable="false"
	            android:text="0"
	            android:layout_gravity="center"
	            android:textStyle="bold"
	            android:paddingLeft="10dp"/>
	    </LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="match_parent" android:layout_gravity="center_horizontal">
			<ImageView
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:id="@+id/imageView2" android:src="@drawable/eq_bass"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:text="10"
				android:id="@+id/tv_eq_bass" android:textSize="10dp"
				android:gravity="center_vertical" android:paddingLeft="2dp"
				android:paddingRight="6dp" android:layout_gravity="bottom"/>
			<ImageView
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:id="@+id/imageView5" android:src="@drawable/eq_mid"/>
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:textAppearance="?android:attr/textAppearanceSmall" android:text="10"
			          android:id="@+id/tv_eq_mid" android:textSize="10dp"
			          android:gravity="center_vertical" android:paddingLeft="2dp"
			          android:paddingRight="6dp" android:layout_gravity="bottom"/>
			<ImageView android:layout_width="16dp" android:layout_height="16dp"
			           android:id="@+id/imageView6" android:src="@drawable/eq_tre"/>
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			          android:textAppearance="?android:attr/textAppearanceSmall" android:text="10"
			          android:id="@+id/tv_eq_tre" android:textSize="10dp"
			          android:gravity="center_vertical" android:paddingLeft="2dp"
			          android:paddingRight="6dp" android:layout_gravity="bottom"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/layout_gps_info"
        android:layout_alignTop="@+id/layout_general_info"
        android:layout_alignParentRight="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_gps_info_title"
            android:id="@+id/text_gps_info_title"
            android:paddingBottom="5dp" android:gravity="center_horizontal"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="252dp"
            android:layout_height="fill_parent"
            android:paddingBottom="5dp"
            android:id="@+id/layout_satellites">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView3"
                    android:src="@drawable/satellite"
                    android:baselineAlignBottom="true"
                    android:layout_marginLeft="-10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="10"
                    android:id="@+id/text_satellites_total"
                    android:textSize="24dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView"
                    android:src="@drawable/satellite_good"
                    android:baselineAlignBottom="true"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:id="@+id/text_satellites_inuse"
                    android:textSize="24dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView4"
                    android:src="@drawable/satellites_inuse"
                    android:baselineAlignBottom="true"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:id="@+id/text_satellites_good"
                    android:textSize="24dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingBottom="5dp"
            android:id="@+id/layout_coordinates">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:id="@+id/ivGPSStatus"
                android:src="@drawable/gps_coordinates"
                android:baselineAlignBottom="false"/>

	        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|fill_vertical"
                android:baselineAligned="true"
                android:layout_weight="1"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65.56874"
                    android:id="@+id/text_gps_latitude"
                    android:gravity="center_vertical"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="43.73620"
                    android:id="@+id/text_gps_longitude"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@string/text_gps_hangs"
	            android:id="@+id/tvGPSHangs"
	            android:gravity="center|right" android:layout_gravity="center_vertical|right"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:showDividers="middle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_gps_altitude"
                android:id="@+id/text_gps_altitude"
                android:layout_gravity="left"
                android:singleLine="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_gps_accuracy"
                android:id="@+id/text_gps_accuracy"
                android:singleLine="true"
                android:gravity="right"/>
        </LinearLayout>

        <Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/btn_agps_reset"
    android:id="@+id/btn_agps_reset"
    android:layout_gravity="right"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_general_options"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/layout_gps_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_device_name"
            android:id="@+id/txtDeviceName"
            android:textSize="20dp"
            android:textIsSelectable="false"
            android:layout_gravity="right"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_show_notification_icon"
            android:id="@+id/switch_show_notification_icon"
            android:checked="false"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="111dp"
            android:layout_gravity="left|bottom"
            android:id="@+id/layout_statistics">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_statistic_title"
                android:id="@+id/textView"
                android:layout_above="@+id/tv_working_start"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_working_start"
                android:id="@+id/tv_working_start"
                android:layout_above="@+id/tv_sleep_mode_count"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_sleep_mode_last_time"
                android:id="@+id/tv_sleep_mode_last_time"
                android:layout_gravity="center_horizontal"
                android:layout_above="@+id/tv_reverse_count"
                android:layout_alignRight="@+id/textView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_sleep_mode_count"
                android:id="@+id/tv_sleep_mode_count"
                android:layout_above="@+id/tv_reverse_count"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_reverse_count"
                android:id="@+id/tv_reverse_count"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>
    </FrameLayout>

	<FrameLayout
		android:layout_width="100dp"
		android:layout_height="60dp"
        android:id="@+id/layout_obd2" android:visibility="invisible"
        android:layout_below="@+id/layout_gps_info"
        android:layout_alignRight="@+id/layout_general_info"
        android:layout_marginRight="28dp">
		<TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="New Text"
	        android:id="@+id/text_obd_rpm"
	        android:layout_gravity="bottom"/>
		<TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="New Text"
	        android:id="@+id/text_obd_speed"
	        android:layout_gravity="top"/>
	</FrameLayout>

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/layout_test"
        android:layout_above="@+id/frameLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/layout_gps_info">
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Speed Up"
			android:id="@+id/btnSpeedUp" android:layout_gravity="right|bottom"/>
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
		        android:text="Speed Down" android:id="@+id/btnSpeedDown"
		        android:layout_gravity="center_vertical|left|top"/>

    </FrameLayout>

</RelativeLayout>
